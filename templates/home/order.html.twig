    <h2 class="text-center">Your order summary</h2>

	<div class="container col-12 mt-5 d-flex flex-wrap" style="justify-content:space-between;">

		{# {{form(formAddOrder)}} #}

		



        {% for order in orderRecap %}

            <div class="card m-auto col-4 d-none">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <h6 class="card-subtitle mb-2 text-muted" id="order_name">{{order.name}}</h6>
                    <p class="card-text" id="order_price">{{order.price}} Â£</p>
                    <button class="btn btn-success" onclick="">Order</button>
                </div>
            </div>

			{{ form_start(formAddOrder ,{'attr': {'id': 'formAddOrder'}} )}}

			{{ form_row(formAddOrder.content, {value : order.name}) }}
			{{ form_row(formAddOrder.totalPrice, {value : order.price}) }}
			{{ form_row(formAddOrder.Order) }}

		{{ form_end(formAddOrder) }}

        {% endfor %}


	</div>


{% endblock %}

